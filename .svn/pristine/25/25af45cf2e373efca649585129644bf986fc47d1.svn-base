        public void terminateCallByCallID(string callId)
        {
            addLog("terminateCallByCallID()");
            try
            {
                for (int i = 0; i < myCalls.Count; i++)
                {
                    if (myCalls[i] != null &&
                      myCalls[i].callid != null &&
                       myCalls[i].callid.Equals(callId))
