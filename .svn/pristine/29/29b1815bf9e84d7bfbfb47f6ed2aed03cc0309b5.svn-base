                if (cl != null &&
                    cl.id != null &&
                    allCallsLog.Count > 0 &&
                    cl.id.Equals(allCallsLog[allCallsLog.Count - 1].id))
                {
                    Console.WriteLine("omer458: last item");
                    getCallLogs(false);
                }
            }
